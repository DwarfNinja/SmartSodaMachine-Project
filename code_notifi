# melding geven extra bijvullen dag van te voren

def busiest_day():
    # check what day sold the most

    total_stock_of_mon = sum(monday) # info uit de DB
    total_stock_of_tue = sum(tuesday)
    total_stock_of_wed = sum(wednesday)
    total_stock_of_thu = sum(thursday)
    total_stock_of_fri = sum(friday)
    total_stock_of_sat = sum(saturday)
    total_stock_of_sun = sum(sunday)
    weekly_stock_info = [total_stock_of_mon, total_stock_of_tue, total_stock_of_wed, total_stock_of_thu, total_stock_of_fri, total_stock_of_sat, total_stock_of_sun]

    busiest_day = max(weekly_stock_info)

    return busiest_day

def notification_restock_day_before():
    # give notification
    return "Please restock the day before " + busiest_day()
