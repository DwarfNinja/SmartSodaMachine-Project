# shows the average amount of soda that is left over, for the n amount of days


def average_amount_of_soda():
    days = int(input("Hoeveel dagen wil je weten?"))

    requested_range = lines_raw[-(days + 1):-1]
    str_requested_range = str(requested_range).replace("[", "").replace("]", "").replace("'", "").replace(" ", "").split(",")
    str_requested_range = [int(i) for i in str_requested_range]

    def delete_8th_char():          # deletes 8th character from list

        del str_requested_range[8 - 1::8]
        return str_requested_range

    # takes sum of n days from x soda
    # take sum of n row

    total = sum(delete_8th_char())

    # divides the sum with n days
    average = total / days

    return round(average)
